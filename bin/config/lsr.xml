		<pid min="-0.1" max="1.1" width="0.01" />
		<spid min="-0.1" max="1.45" width="0.25" />
		
	</bins>

	<style>
		<ratio draw="hp"/>
		<ls linecolor="#F00" markerstyle="1"/>
		<uls linecolor="#00F" markerstyle="1" />
		<bg linecolor="#000" markerstyle="1" />

		<hpuls lc="#F00" />
		<hpls lc="#00F" />
	</style>

</config>