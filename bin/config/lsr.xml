		<massuls min="0.0" max="4.0" width="0.01" />
		<!-- <mass>0.0, 0.2, 0.5, 1.0, 3.0, 3.2, 4.0</mass> -->
		<!-- <mass>0.0, 0.5, 1.0, 3.0</mass> -->
		<!-- <mass>3.2, 15.0</mass> -->

